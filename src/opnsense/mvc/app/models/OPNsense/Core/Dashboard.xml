<model>
    <mount>//OPNsense/Dashboard</mount>
    <description>Dashboard widget configuration</description>
    <version>0.0.1</version>
    <items>
        <widget type="ArrayField">
            <id type="TextField"/>
            <x type="IntegerField"/>
            <y type="IntegerField"/>
            <locked type="BooleanField">
                <Default>0</Default>
            </locked>
            <noResize type="BooleanField">
                <Default>0</Default>
            </noResize>
            <noMove type="BooleanField">
                <Default>0</Default>
            </noMove>
            <customoptions type="TextField"/>
        </widget>
    </items>
</model>